@{
    ViewData["Title"] = "Nueva Venta";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}
<style>
    span svg{color:white}
    input{
        height:40px !important;
        font-size: 18px !important;
    }
    .feather-fixed-h {
        height: 1.5rem;
    }

</style>
<div class="row" style="margin-top:2rem">
    <div class="col-sm-12">
        <div class="box">
            <div class="box-head">
                <h2>Nueva Venta</h2>
            </div>
            <div class="panel-body">
                @using (Html.BeginForm("NewSale", "Dashboard", FormMethod.Post, new { id = "frmSale" }))
                {
                    @Html.AntiForgeryToken()
                    <div class="row">
                        <div class="form-group col-xs-12 col-md-3 col-lg-4">
                            <label for="identification">Cliente</label>
                            <div class="input-group">
                                <input type="text" class="form-control numbers" id="identification" name="identification" maxlength="10" required>
                                <span class="input-group-addon bg-success" style="cursor:pointer"><i data-feather="search"></i></span>
                            </div>
                        </div>
                        <div class="form-group col-xs-12 col-md-5">
                            <label for="names">Nombres completos</label>
                            <input id="names" name="names" type="text" class="form-control" maxlength="100" readonly required />
                        </div>
                    </div>

                    <div class="row">
                        <div class="form-group col-xs-12 col-md-3 col-md-offset-4">
                            <button type="button" class="btn btn-success btn-block"><i data-feather="plus-circle" style=" vertical-align: middle; "></i> Agregar producto</button>
                        </div>
                    </div>

                    <div class="row">
                        <div class="item">
                            <div class="item-responsive ">
                                <table class="table table-striped" id="tbl_dishes">
                                    <thead>
                                        <tr>
                                            <td>CODIGO</td>
                                            <td>NOMBRE DE PRODUCTO</td>
                                            <td>PRECIO</td>
                                            <td>CATEGORÍA</td>
                                            <td></td>
                                        </tr>
                                    </thead>
                                    <tbody id="tbody_products">
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>

                    <div class="row ">
                        <div class="form-group col-xs-12 col-md-4 col-md-offset-8 text-right">
                            <button type="submit" class="btn btn-primary btn-block" style="margin-top:2rem"><i data-feather="dollar-sign" style=" vertical-align: middle;"></i> VENDER</button>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<!-- Products modal -->
<div class="modal fade" id="products-modal" tabindex="-1" role="dialog" aria-labelledby="products-modalTitle" aria-hidden="true" data-id="">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="product-title"></h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="row container">
                    <div class="col-sm-12 col-md-6">
                        <div id="wrap-price" class="text-center">
                            <span class="price text-success">$</span><span class="price text-success" id="modal-price"></span>
                        </div>
                    </div>
                    <div class="col-sm-12 col-md-6">
                        <div class="input-group mb-3 mt-3">
                            <div class="input-group-prepend">
                                <button type="button" class="btn btn-dark btn-lg" onclick="setQuantity(-1)"><i class="fa fa-minus"></i></button>
                            </div>
                            <input type="text" class="quantity-product" id="txt_quantity" name="txt_quantity" value="1" maxlength="4" readonly />
                            <div class="input-group-append">
                                <button type="button" class="btn btn-dark btn-lg" onclick="setQuantity(1)"><i class="fa fa-plus"></i></button>
                            </div>
                            <div class="input-group-append mt-3">
                                <button type="button" class="form-control btn btn-primary" id="add-cart"><i class="fa fa-cart-plus"></i> Agregar al carrito</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

