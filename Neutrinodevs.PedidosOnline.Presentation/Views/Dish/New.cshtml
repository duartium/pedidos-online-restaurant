
@{
    ViewData["Title"] = "Nuevo Producto";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

<div class="row " style="margin-top: 4rem">
    <div class="col-md-12 col-xs-12">

        <div class="panel panel-default">
            <div class="panel-heading">
                <h3>Nuevo Producto</h3>
            </div>
            <div class="panel-body">
                @using (Html.BeginForm("New", "Dish", FormMethod.Post, new { id = "frmDish", @class = "pr-4" }))
                {
                    @Html.AntiForgeryToken()
                    <div class="row">
                        <div class="form-group col-xs-12 col-md-4 ">
                            <label for="identification">Nombre de producto</label>
                            <input id="name" name="name" type="text" class="form-control " minlength="4" maxlength="100" required />
                        </div>
                        <div class="form-group col-xs-12 col-md-2">
                            <label for="price">Precio</label>
                            <input id="price" name="price" type="number" class="form-control numbers" minlength="1" maxlength="8" required />
                        </div>
                        <div class="form-group col-xs-12 col-md-6">
                            <label for="image">Imagen</label>
                            <input id="image" name="image" type="file" class="form-control back-primary" minlength="3" required />
                        </div>
                    </div>
                    <div class="row text-right">
                        <div class="col-xs-12 col-md-4 ">
                            <button type="submit" class="btn btn-success btn-block">Crear Producto</button>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
@section Scripts{
    <script src="~/js/dish/dish.js"></script>
}

